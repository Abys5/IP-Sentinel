{
    "name": "abuse-sleuth",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "infrastructure",
        "cypress"
    ],
    "scripts": {
        "--------- Turbo ---------": "",
        "build": "turbo run build",
        "dev": "turbo run dev --include-dependencies --parallel",
        "clean": "turbo run clean && rimraf node_modules .turbo",
        "--------- Apps ---------": "",
        "web": "yarn workspace @abuse-sleuth/web",
        "--------- Packages ---------": "",
        "ui": "yarn workspace @abuse-sleuth/ui",
        "prisma": "yarn workspace @abuse-sleuth/prisma",
        "trpc": "yarn workspace @abuse-sleuth/trpc",
        "auth": "yarn workspace @abuse-sleuth/authentication",
        "--------- Format and Lint ---------": "",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "--------- Testing ---------": "",
        "test": "run-s test:unit test:e2e",
        "test:unit": "turbo run test:unit",
        "test:e2e": "turbo run test:e2e",
        "--------- Infrastructure ---------": "",
        "infra": "yarn workspace @abuse-sleuth/infrastructure",
        "infra:up": "yarn infra up",
        "infra:down": "yarn infra down",
        "--------- NPM Setups ---------": "",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "detect-secrets": "^1.0.6",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.2",
        "npm-run-all": "^4.1.5",
        "prettier": "latest",
        "rimraf": "^3.0.2",
        "turbo": "latest"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=16.0.0"
    },
    "dependencies": {},
    "lint-staged": {
        "*": "prettier --ignore-unknown --write"
    },
    "packageManager": "yarn@1.22.18"
}
