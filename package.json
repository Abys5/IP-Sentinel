{
    "name": "abuse-sleuth",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "--------- Turbo ---------": "",
        "build": "turbo build",
        "dev": "turbo dev --include-dependencies --parallel",
        "clean": "turbo clean && rimraf node_modules .turbo",
        "--------- Apps ---------": "",
        "web": "yarn workspace @abuse-sleuth/web",
        "--------- Packages ---------": "",
        "ui": "yarn workspace @abuse-sleuth/ui",
        "prisma": "yarn workspace @abuse-sleuth/prisma",
        "trpc": "yarn workspace @abuse-sleuth/trpc",
        "stripe": "yarn workspace @abuse-sleuth/stripe",
        "auth": "yarn workspace @abuse-sleuth/authentication",
        "--------- Scripts ---------": "",
        "env:unlink": "node scripts/env/unlink.js",
        "env:create": "node scripts/env/create.js",
        "--------- Format and Lint ---------": "",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "--------- Testing ---------": "",
        "test": "run-s test:unit test:e2e",
        "test:unit": "turbo run test:unit",
        "test:e2e": "turbo run test:e2e",
        "--------- Infrastructure ---------": "",
        "infra": "yarn workspace @abuse-sleuth/infrastructure",
        "infra:up": "yarn infra up",
        "infra:down": "yarn infra down",
        "--------- NPM Setups ---------": "",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,md}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{ts,tsx,js,jsx,json}": [
            "detect-secrets-launcher"
        ]
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^3.2.0",
        "detect-secrets": "^1.0.6",
        "envfile": "^6.17.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "prettier-plugin-organize-imports": "^3.1.1",
        "rimraf": "^3.0.2",
        "turbo": "^1.5.2"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=16.0.0"
    },
    "dependencies": {},
    "packageManager": "yarn@1.22.18"
}
