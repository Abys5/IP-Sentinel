{
    "name": "@abuse-sleuth/prisma",
    "version": "0.0.0",
    "main": "index.ts",
    "types": "index.ts",
    "scripts": {
        "prisma": "dotenv -e ../../.env -- prisma",
        "clean": "rimraf .turbo node_modules dist",
        "--------- Production ---------": "",
        "deploy": "run-s db:build db:deploy",
        "build": "run-s db:generate",
        "db:deploy": "yarn prisma migrate deploy",
        "--------- Development ---------": "",
        "dev": "run-s db:generate",
        "db:studio": "yarn prisma studio",
        "db:migrate": "yarn prisma migrate dev",
        "db:seed": "yarn prisma db seed",
        "--------- Build ---------": "",
        "db:generate": "yarn prisma generate",
        "db:push": "yarn prisma db push",
        "--------- Docker ---------": "",
        "db:up": "docker-compose up -d",
        "db:down": "docker-compose down --volumes --remove-orphans",
        "--------- TSUP ---------": "",
        "tsup:build": "tsup index.ts --dts",
        "tsup:dev": "tsup index.ts --watch --dts"
    },
    "devDependencies": {
        "@abuse-sleuth/tsconfig": "*",
        "dotenv": "^16.0.1",
        "npm-run-all": "^4.1.5",
        "prisma": "^3.12.0",
        "rimraf": "^3.0.2",
        "ts-node": "^10.5.0",
        "tsup": "^6.1.3",
        "zod": "^3.17.3",
        "zod-prisma": "^0.5.4"
    },
    "prisma": {
        "seed": "ts-node seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^3.12.0",
        "dotenv-cli": "^6.0.0"
    }
}
